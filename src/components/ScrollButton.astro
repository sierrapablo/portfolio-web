---
interface Props {
  id?: string;
  className?: string;
}

const { id, className } = Astro.props;
---

<button id={id} class:list={['scroll-to-top-btn', className]} aria-label="Scroll to top">
  <svg
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
  >
    <path d="M18 15l-6-6-6 6"></path>
  </svg>
</button>
