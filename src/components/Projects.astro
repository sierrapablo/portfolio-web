---
import '../styles/projects.css';
import { projects } from '../lib/data';
---

<section id="projects" class="fade-in delay-2">
  <h2>Projects</h2>
  <div class="grid">
    {
      projects.map((project) => (
        <div class="card">
          <h3>
            <a href={`/projects/${project.slug}`}>{project.title}</a>
          </h3>
          <p>{project.description}</p>
          <div class="tech-stack">
            {project.techStack.map((tech) => (
              <span class="tech-tag">{tech}</span>
            ))}
          </div>
          <div class="links">
            <a href={`/projects/${project.slug}`} class="link-btn">
              Read More
            </a>
            {project.url && (
              <a href={project.url} target="_blank" rel="noopener noreferrer" class="link-btn">
                View Project
              </a>
            )}
            {project.link && (
              <a href={project.link} target="_blank" rel="noopener noreferrer" class="link-btn">
                Live Demo
              </a>
            )}
          </div>
        </div>
      ))
    }
  </div>
</section>
